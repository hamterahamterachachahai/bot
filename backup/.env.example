# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_bot_token_here

# User and Role Permissions
# Comma-separated list of user IDs that can use the bot (only these users can use ANY command)
ALLOWED_USER_IDS=1371770747692777553,1318613193215705211,1151217188951298138,980130432882454578

# Comma-separated list of role IDs that can use admin/DM commands  
ALLOWED_ROLE_IDS=123456789012345678,987654321098765432

# DM Settings
# Delay between DMs to prevent rate limiting (in seconds)
DM_DELAY=1.5

# Whether to log DM operations to console (true/false)
LOG_DMS=true

# Example configuration:
# DISCORD_BOT_TOKEN=ODxxxxxxxxxxxxxxxxxxxxxxxx.Yxxxxx.xxxxxxxxxxxxxxxxxxxxxxxxxxx
# ALLOWED_USER_IDS=123456789012345678,987654321098765432
# ALLOWED_ROLE_IDS=555666777888999000,111222333444555666
# DM_DELAY=2.0
# LOG_DMS=true
